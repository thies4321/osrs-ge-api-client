#!/usr/bin/env php
<?php

declare(strict_types=1);

use OsrsGeApiClient\Command\Client\CategoryCommand;
use OsrsGeApiClient\Command\Client\DetailCommand;
use OsrsGeApiClient\Command\Client\GraphCommand;
use OsrsGeApiClient\Command\Client\InfoCommand;
use OsrsGeApiClient\Command\Client\ItemsCommand;
use Symfony\Component\Console\Application;

require_once(sprintf('%s/../vendor/autoload.php', __DIR__));

$application = new Application();

$application->addCommands([
    new InfoCommand(),
    new CategoryCommand(),
    new ItemsCommand(),
    new DetailCommand(),
    new GraphCommand(),
]);

$application->run();
